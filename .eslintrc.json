{
    "env": {
        "browser": true,
        "es2021": true
    },
    "settings": {
        "import/resolver": {
          "node": {
            "extensions": [".js", ".jsx", ".ts", ".tsx"]
          }
        }
    },
    "extends": [
        "plugin:react/recommended",
        "standard-with-typescript",
        "airbnb",
        "prettier"
    ],
    "overrides": [
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "project": ["./tsconfig.json"]
    },
    "plugins": [
        "react",
        "prettier",
        "@typescript-eslint"
        ],
    "rules": {
        "react/jsx-filename-extension": [0],
        "import/extensions": "off",
        "@typescript-eslint/explicit-function-return-type": "off",
        "prettier/prettier": [
            "error",
            {
                "singleQuote": true,
                "parser": "typescript", 
                "endOfLine": "auto"
            }
        ]
    }
}
